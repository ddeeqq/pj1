{
  "scheduler": {
    "max_retries": 3,
    "delay_between_tasks": 60,
    "enable_performance_monitoring": true,
    "enable_data_validation": true
  },
  "email": {
    "enabled": false,
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "email": "your_email@gmail.com",
    "password": "your_app_password",
    "recipients": [
      "admin@yourcompany.com"
    ],
    "send_daily_reports": true,
    "send_error_alerts": true
  },
  "resource_limits": {
    "max_cpu_percent": 80,
    "max_memory_percent": 85,
    "max_disk_percent": 90,
    "min_free_disk_gb": 5
  },
  "data_retention": {
    "price_data_days": 30,
    "log_data_days": 90,
    "backup_keep_days": 14
  },
  "crawling": {
    "encar": {
      "enabled": true,
      "base_url": "http://www.encar.com",
      "search_url": "http://www.encar.com/dc/dc_carsearchlist.do",
      "delay": 2,
      "timeout": 30,
      "max_retries": 3,
      "max_pages_per_model": 5,
      "max_items_per_model": 20,
      "batch_size": 5
    },
    "recall": {
      "enabled": true,
      "base_url": "https://www.car.go.kr",
      "search_url": "https://www.car.go.kr/recall/recall_list.car",
      "delay": 1,
      "timeout": 30,
      "max_retries": 3,
      "check_last_days": 30,
      "max_items": 50,
      "max_pages": 10,
      "page_size": 20,
      "date_range_days": 30
    },
    "public_data": {
      "enabled": true,
      "auto_download": false,
      "file_path": "data/cache/car_registration_data.xlsx"
    }
  },
  "alerts": {
    "data_collection_drop_threshold": 0.5,
    "system_health_threshold": 70,
    "critical_recall_keywords": ["화재", "브레이크", "에어백", "조향"],
    "notify_on_new_critical_recalls": true
  }
}
